<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_logged_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usuario logueado"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consulta de Activos"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_codigo_rfid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código RFID"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_codigo_rfid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe el código RFID"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_nombre_activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre del Activo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/et_nombre_activo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Escribe el nombre del activo"
            android:inputType="text" />

        <TextView
            android:id="@+id/tv_tipo_activo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tipo de Activo"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/sp_tipo_activo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_responsable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Responsable"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/sp_responsable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_ubicacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubicación"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/sp_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categoría"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <Spinner
            android:id="@+id/sp_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_buscar_activo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Buscar Activo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_activos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="gone" />

    </LinearLayout>
</ScrollView>
